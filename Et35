  <script>
    // A√±o en footer
    document.getElementById('year').textContent = new Date().getFullYear();

    // Men√∫ m√≥vil
    const openMenu = document.getElementById('openMenu');
    const mobileMenu = document.getElementById('mobileMenu');
    openMenu?.addEventListener('click', () => {
      const isOpen = mobileMenu.classList.toggle('open');
      openMenu.setAttribute('aria-expanded', isOpen);
    });

    // Bot√≥n "Contraste": alterna un modo de mayor contraste para accesibilidad
    const toggleTheme = document.getElementById('toggleTheme');
    toggleTheme?.addEventListener('click', () => {
      const root = document.documentElement;
      const high = root.style.getPropertyValue('--sand') === '#fff';
      if (high) { // volver a c√°lido por defecto
        root.style.removeProperty('--sand');
        root.style.removeProperty('--paper');
        root.style.removeProperty('--ink-900');
        root.style.removeProperty('--ink-700');
      } else { // alto contraste (m√°s blanco y texto m√°s oscuro)
        root.style.setProperty('--sand', '#fff');
        root.style.setProperty('--paper', '#fff');
        root.style.setProperty('--ink-900', '#1b1007');
        root.style.setProperty('--ink-700', '#3a2412');
      }
      const pressed = toggleTheme.getAttribute('aria-pressed') === 'true';
      toggleTheme.setAttribute('aria-pressed', String(!pressed));
    });

    // Animaci√≥n on-view
    const observer = new IntersectionObserver(entries => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          e.target.animate([
            { opacity: 0, transform: 'translateY(10px)' },
            { opacity: 1, transform: 'translateY(0)' }
          ], { duration: 500, easing: 'ease-out', fill: 'both' });
          observer.unobserve(e.target);
        }
      });
    }, { threshold: 0.12 });
    document.querySelectorAll('section .container > *').forEach(el => observer.observe(el));
  </script>
